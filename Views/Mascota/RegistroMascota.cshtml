@model GO2PET.Models.Mascota

@{
    ViewData["Title"] = "Agregar Nueva Mascota";
}

<h1 class="text-center">Agregar Nueva Mascota</h1>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-success text-center">
        @ViewData["Message"]
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Informaci√≥n de la Mascota</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Mascota" asp-action="Enviar" method="post">
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre de la mascota" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Raza" class="control-label"></label>
                            <input asp-for="Raza" class="form-control" placeholder="Raza de la mascota" />
                            <span asp-validation-for="Raza" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Color" class="control-label"></label>
                            <input asp-for="Color" class="form-control" placeholder="Color de la mascota" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FechaNacimiento" class="control-label"></label>
                            <input asp-for="FechaNacimiento" class="form-control" placeholder="Fecha de nacimiento" />
                            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Lista" class="btn btn-secondary">Volver a la lista</a>
</div>
