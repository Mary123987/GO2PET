@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-image: url('https://example.com/path-to-your-pet-themed-background.jpg');
        background-size: cover;
        background-attachment: fixed;
        font-family: 'Arial', sans-serif;
    }
    .container {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 50px;
    }
    .display-4 {
        font-weight: bold;
        color: #ff6f61;
    }
    .btn-primary {
        background-color: #ff6f61;
        border-color: #ff6f61;
    }
    .btn-primary:hover {
        background-color: #ff3b2f;
        border-color: #ff3b2f;
    }
</style>

<div class="container text-center">
    <h1 class="display-4">Bienvenido a PetLovers ♥ </h1>
    <p>Registra y consulta la lista de las mascotas fácilmente.</p>
    <a asp-controller="Mascota" asp-action="RegistroMascota" class="btn btn-primary">Agregar Nueva Mascota</a>
    <a asp-controller="Mascota" asp-action="Lista" class="btn btn-secondary">Ver Lista de Mascotas</a>
</div>